<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container">

    <div class="row">

        <h1 style="text-align: center;">Add New Comment to <%= gallery.name %></h1>
        <div style="width: 30%; margin: 20px auto">
        <form action="/galleries/<%= gallery._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="comment">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-default btn-primary btn-block">Submit</button>
                <a class="btn btn-lg btn-default btn-danger btn-block" href="/galleries">Cancel</a>
            </div>
        </form>
        </div>
    </div>

</div>

