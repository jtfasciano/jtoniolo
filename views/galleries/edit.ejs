<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="ui main text raised container">
  <div class="ui top attached segment">
    <h1 class="ui clearing left floated header">Edit Gallery: <%= gallery.name %></h1>


    <form class="ui form" action="/galleries/<%= gallery._id %>?_method=PUT" method="POST">

      <div class="field">
        <label>Name</label>
        <input type="text" name="gallery[name]" value="<%= gallery.name %>">
      </div>

      <div class="field">
        <label>Type</label>
        <select name="gallery[type]" class="ui fluid dropdown">
          <option value="<%= gallery.type %>"><%= gallery.type %></option>
          <option value="Photo">Photo</option>
          <option value="Video">Video</option>
        </select>
      </div>

      <div class="field">
        <label>Thumbnail</label>
        <input type="text" name="gallery[image]" value="<%= gallery.image %>">
      </div>

      <div class="field">
        <label>Description</label>
        <textarea type="text" name="gallery[description]"><%= gallery.description %></textarea>
      </div>

      <button class="ui button" type="submit">Submit</button>
      <a class="ui button" href="/galleries">Cancel</a>
    </form>
  </div>
</div>

<% include ../partials/footer %>
